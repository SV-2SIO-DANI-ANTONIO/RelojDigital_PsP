<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="413.0" prefWidth="572.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.svalero.relojdigitalpsp.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <ScrollPane prefHeight="486.0" prefWidth="781.0">
         <content>
            <AnchorPane prefHeight="359.0" prefWidth="530.0">
               <children>
                  <Button fx:id="btStartTimer" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#startTimer" text="Inicar Temporizador" />
                  <Button fx:id="btStartChrono" layoutX="14.0" layoutY="50.0" mnemonicParsing="false" onAction="#startChrono" prefHeight="26.0" prefWidth="122.0" text="Iniciar Cronometro" />
                  <TextField fx:id="tfSchedule" layoutX="366.0" layoutY="50.0" promptText="Iniciar en X segundos" />
                  <Label layoutX="366.0" layoutY="18.0" text="Programar inicio:" />
                  <TabPane id="tabPane" layoutY="100.0" prefHeight="258.0" prefWidth="526.0" tabClosingPolicy="ALL_TABS" />
                  <Button fx:id="btStopAllTimer" layoutX="176.0" layoutY="14.0" mnemonicParsing="false" onAction="#stopAllTimers" text="Detener temporizadores" />
                  <Button fx:id="btStopAllChrono" layoutX="176.0" layoutY="50.0" mnemonicParsing="false" onAction="#stopAllChronos" prefHeight="26.0" prefWidth="144.0" text="Detener cronometros" />
               </children>
            </AnchorPane>
         </content>
      </ScrollPane>
   </children>
</VBox>
